import re
import random
import string
import pandas as pd

def random_digits(length):
    return ''.join(random.choice(string.digits) for _ in range(length))

def mask_numbers_inside_text(val):
    if pd.isnull(val):
        return val

    val_str = str(val).strip()

    # Replace all digit sequences (e.g. "123", "0001") with random digits
    masked = re.sub(r'\d+', lambda m: random_digits(len(m.group())), val_str)
    return masked


def mask_columns_with_embedded_numbers(file_path, columns_to_mask, output_file):
    all_sheets = pd.read_excel(file_path, sheet_name=None)
    updated_sheets = {}

    for sheet_name, df in all_sheets.items():
        print(f"\nğŸ“„ Processing sheet: {sheet_name}")
        df.columns = df.columns.str.strip()

        for col in columns_to_mask:
            if col in df.columns:
                print(f"ğŸ” Masking numbers inside text in column: {col}")
                df[col] = df[col].apply(mask_numbers_inside_text)
            else:
                print(f"âš ï¸ Column '{col}' not found in sheet '{sheet_name}'")

        updated_sheets[sheet_name] = df

    with pd.ExcelWriter(output_file, engine='openpyxl') as writer:
        for sheet_name, df in updated_sheets.items():
            df.to_excel(writer, sheet_name=sheet_name, index=False)

    print(f"\nâœ… Embedded number masking complete. Output saved to: {output_file}")